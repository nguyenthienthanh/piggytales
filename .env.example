# PiggyTales Environment Variables
# Copy this file to .env and fill in your API keys

# ===========================================
# DATABASE (Supabase)
# ===========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key
SUPABASE_ANON_KEY=your-anon-key

# ===========================================
# VIDEO GENERATION
# ===========================================
# Google Veo 3.1 (via Gemini API)
GOOGLE_AI_API_KEY=your-google-ai-key
VEO3_MODEL=veo-3.1-generate-preview

# ===========================================
# MUSIC GENERATION
# ===========================================
# Suno V5 API
SUNO_API_KEY=your-suno-api-key
SUNO_API_URL=https://api.sunoapi.org

# ===========================================
# VOICE GENERATION
# ===========================================
# Vbee (Vietnamese TTS)
VBEE_API_KEY=your-vbee-api-key
VBEE_APP_ID=your-vbee-app-id

# ElevenLabs (Multi-language TTS) - Optional
ELEVENLABS_API_KEY=your-elevenlabs-key

# ===========================================
# IMAGE GENERATION
# ===========================================
# OpenAI DALL-E 3
OPENAI_API_KEY=your-openai-key

# Leonardo.ai - Optional
LEONARDO_API_KEY=your-leonardo-key

# ===========================================
# SOCIAL MEDIA PUBLISHING
# ===========================================
# YouTube
YOUTUBE_API_KEY=your-youtube-api-key
YOUTUBE_CLIENT_ID=your-client-id
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REFRESH_TOKEN=your-refresh-token

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-client-key
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_ACCESS_TOKEN=your-access-token

# ===========================================
# TREND ANALYSIS (Optional)
# ===========================================
# Brandwatch
BRANDWATCH_API_KEY=your-brandwatch-key

# Talkwalker
TALKWALKER_API_KEY=your-talkwalker-key

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================
# Slack
SLACK_BOT_TOKEN=xoxb-your-slack-token
SLACK_CHANNEL_ID=your-channel-id

# Discord
DISCORD_WEBHOOK_URL=your-webhook-url

# ===========================================
# OTHER
# ===========================================
# Environment
NODE_ENV=development

# Logging
LOG_LEVEL=info
