{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/mcp-schema.json",
  "mcpServers": {
    "supabase": {
      "command": "npx",
      "args": ["-y", "@supabase/mcp-server"],
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL}",
        "SUPABASE_SERVICE_KEY": "${SUPABASE_SERVICE_KEY}"
      },
      "description": "Content database for projects, assets, publications, and analytics"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Library documentation for API integrations"
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic/playwright-mcp"],
      "description": "Browser automation for research and publishing verification"
    },
    "youtube": {
      "command": "npx",
      "args": ["-y", "@anthropic/youtube-mcp"],
      "env": {
        "YOUTUBE_API_KEY": "${YOUTUBE_API_KEY}"
      },
      "description": "YouTube video analysis, upload, and analytics"
    },
    "piggytales-veo3": {
      "command": "node",
      "args": ["src/mcp/dist/veo3/index.js"],
      "env": {
        "GOOGLE_AI_API_KEY": "${GOOGLE_AI_API_KEY}",
        "VEO3_MODEL": "${VEO3_MODEL}"
      },
      "description": "Google Veo 3.1 video generation with native audio"
    },
    "piggytales-suno": {
      "command": "node",
      "args": ["src/mcp/dist/suno/index.js"],
      "env": {
        "SUNO_API_KEY": "${SUNO_API_KEY}",
        "SUNO_API_URL": "${SUNO_API_URL}"
      },
      "description": "Suno V5 music and audio generation"
    },
    "piggytales-trends": {
      "command": "node",
      "args": ["src/mcp/dist/trends/index.js"],
      "description": "Trend analysis and market research for content planning"
    },
    "piggytales-publisher": {
      "command": "node",
      "args": ["src/mcp/dist/publisher/index.js"],
      "env": {
        "YOUTUBE_CLIENT_ID": "${YOUTUBE_CLIENT_ID}",
        "YOUTUBE_CLIENT_SECRET": "${YOUTUBE_CLIENT_SECRET}",
        "YOUTUBE_REFRESH_TOKEN": "${YOUTUBE_REFRESH_TOKEN}",
        "TIKTOK_CLIENT_KEY": "${TIKTOK_CLIENT_KEY}",
        "TIKTOK_CLIENT_SECRET": "${TIKTOK_CLIENT_SECRET}",
        "TIKTOK_ACCESS_TOKEN": "${TIKTOK_ACCESS_TOKEN}"
      },
      "description": "Multi-platform publishing to YouTube and TikTok"
    }
  },
  "_setup": {
    "instructions": [
      "1. Copy .env.example to .env and fill in API keys",
      "2. Build MCP servers: cd src/mcp && npm install && npm run build",
      "3. Set up Supabase: Run database/migrations/001_initial_schema.sql",
      "4. Restart Claude Code to activate MCP servers"
    ],
    "required_env_vars": [
      "SUPABASE_URL",
      "SUPABASE_SERVICE_KEY",
      "GOOGLE_AI_API_KEY",
      "SUNO_API_KEY",
      "VBEE_API_KEY"
    ],
    "optional_env_vars": [
      "YOUTUBE_API_KEY",
      "YOUTUBE_CLIENT_ID",
      "YOUTUBE_CLIENT_SECRET",
      "TIKTOK_CLIENT_KEY",
      "ELEVENLABS_API_KEY"
    ]
  }
}
